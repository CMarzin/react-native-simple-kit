{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "flowtype"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "React$Element": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [2, "always"],
    "global-require": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "no-floating-decimal": 0,
    "radix": ["error", "as-needed"],
    "react/jsx-boolean-value": 0,
    "react/jsx-filename-extension": 0,
    "react/sort-comp": 0,
    "semi": [2, "never"]
  }
}
